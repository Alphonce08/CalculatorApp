<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/edtstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="61dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/edtsfirst"
        app:layout_constraintEnd_toEndOf="@+id/edtsfirst" />

    <EditText
        android:id="@+id/edtsfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:hint="Enter First Number"
        android:inputType="number"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/btnmultiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/edtssecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Enter Second Number"
        android:inputType="numberPassword"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/edtsfirst"
        app:layout_constraintTop_toBottomOf="@+id/edtsfirst"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="19dp"
        android:text="ADD"
        app:layout_constraintBottom_toTopOf="@+id/btndivide"
        app:layout_constraintStart_toStartOf="@+id/btndivide" />

    <Button
        android:id="@+id/btnmultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="MULTIPLY"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnadd"
        app:layout_constraintEnd_toEndOf="@+id/btnsub" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:text="DIVIDE"
        app:layout_constraintEnd_toStartOf="@+id/btnmultiply"
        app:layout_constraintTop_toTopOf="@+id/btnsub" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="248dp"
        android:text="SUBRACT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>